@model IEnumerable<TeachMe.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Courses List:</h3>

@if (!Model.Any())
{
    <h3>There are no Course available</h3>
}
else
{
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Course cCode</th>
                <th>Course Name</th>
                <th>Action</th>
                

            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                
                <td>@Html.ActionLink("Detail", "Detail", new { courseId = item.Id })</td>
                



            </tr>
        }

    </table>
}

