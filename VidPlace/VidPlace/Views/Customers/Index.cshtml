@model List<VidPlace.Models.Customer>
@{
    ViewBag.Title = "getCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Customer List:</h3>

@if (Model.Count == 0)
{
    <h3>Customer Not found</h3>
}
else
{
    <table>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@Html.ActionLink("Detail", "Detail", new { customerID = item.ID })</td>
            </tr>
        }

    </table>
}
