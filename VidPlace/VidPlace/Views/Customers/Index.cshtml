@model IEnumerable<VidPlace.Models.Customer>
@{
    ViewBag.Title = "getCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Customer List:</h3>

@if (!Model.Any())
{
    <h3>There are no customer avalable</h3>
}
else
{
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
                <th colspan="2">Action</th>
                <th>Rental</th>

            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@Html.ActionLink(item.Name, "Detail", "Customers", new { cust = item.ID }, null)</td>
                <td>@item.MembershipType.Name</td>
                <td>@item.MembershipType.DiscountRate %</td>
                <td>@Html.ActionLink("Detail", "Detail", new { customerID = item.ID })</td>   
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.ID })</td>
                <td>@Html.ActionLink("Select for Rental", "Create", "Rentals", new { id = item.ID },null)</td>   
                
                
                
            </tr>
        }

    </table>
}
