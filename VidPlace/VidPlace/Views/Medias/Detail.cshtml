@model VidPlace.Models.Media
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Media Type: @Model.MediaType.TypeName</li>
    <li>Release Date: @Model.ReleaseDate.ToShortTimeString()</li>
    <li>Date Added: @Model.DateAdded.ToShortTimeString()</li>
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>



